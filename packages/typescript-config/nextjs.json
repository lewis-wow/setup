{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "verbatimModuleSyntax": false
  }
}
